<config>
	<modules>
		<Apptha_Superdeals>
			<version>0.1.0</version>
		</Apptha_Superdeals>
	</modules>
	<frontend>
		<translate>
			<modules>
				<translations>
					<files>
						<default>Apptha_Superdeals.csv</default>
					</files>
				</translations>
			</modules>
		</translate>
		<routers>
			<superdeals>
				<use>standard</use>
				<args>
					<module>Apptha_Superdeals</module>
					<frontName>deals</frontName>
				</args>
			</superdeals>
		</routers>
		<layout>
			<updates>
				<superdeals>
					<file>superdeals.xml</file>
				</superdeals>
			</updates>
		</layout>
	</frontend>
	<global>
		<helpers>
			<superdeals>
				<class>Apptha_Superdeals_Helper</class>
			</superdeals>
		</helpers>
		<blocks>
			<superdeals>
				<class>Apptha_Superdeals_Block</class>
			</superdeals>
		</blocks>
		<models>
			<superdeals>
				<class>Apptha_Superdeals_Model</class>
				<resourceModel>superdeals_mysql4</resourceModel>
			</superdeals>
			<superdeals_mysql4>
				<class>Apptha_Superdeals_Model_Mysql4</class>
				<entities>
					<dealz>
						<table>superdeals_orders</table>
					</dealz>
				</entities>
				<entities>
					<dealstatistics>
						<table>superdeals_reports</table>
					</dealstatistics>
				</entities>
			</superdeals_mysql4>
			<sales>
				<rewrite>
					<order>Apptha_Superdeals_Model_Order</order>
				</rewrite>
				<!-- <rewrite>
					<order_payment>Apptha_Superdeals_Model_Order_Payment</order_payment>
				</rewrite> -->
			</sales>
		</models>
		<resources>
			<superdeals_setup>
				<setup>
					<module>Apptha_Superdeals</module>
				</setup>
				<connection>
					<use>core_setup</use>
				</connection>
			</superdeals_setup>
			<superdeals_write>
				<connection>
					<use>core_write</use>
				</connection>
			</superdeals_write>
			<superdeals_read>
				<connection>
					<use>core_read</use>
				</connection>
			</superdeals_read>
		</resources>
		<template>
			<email>
				<!-- <superdeals_general_email_template
					translate="label" module="apptha_superdeals">
					<label>Statistic Email Template</label>
					<file>superdeals/superdeals_statistics_email.html</file>
					<type>html</type>
				</superdeals_general_email_template> -->
				<superdeals_general_notify_template
					translate="label" module="apptha_superdeals">
					<label>Notification Email Template</label>
					<file>superdeals/superdeals_notification_email.html</file>
					<type>html</type>
				</superdeals_general_notify_template>

			</email>
		</template>
		<events>
			<sales_order_place_after>
				<observers>
					<superdeals>
						<type>singleton</type>
						<class>superdeals/observer</class>
						<method>afterSalesOrderSaved</method>
						<args></args>
					</superdeals>
				</observers>
			</sales_order_place_after>
			<catalog_product_save_after>
				<observers>
					<superdeals>
						<type>singleton</type>
						<class>superdeals/observer</class>
						<method>afterProductSaved</method>
						<args></args>
					</superdeals>
				</observers>
			</catalog_product_save_after>
			<sales_order_status_after>
				<observers>
					<superdeals>
						<type>singleton</type>
						<class>superdeals/observer</class>
						<method>salesOrderStatusAfter</method>
						<args></args>
					</superdeals>
				</observers>
			</sales_order_status_after>
			<sales_order_payment_capture>
				<observers>
					<superdeals>
						<type>singleton</type>
						<class>superdeals/observer</class>
						<method>salesOrderPaymentCapture</method>
						<args></args>
					</superdeals>
				</observers>
			</sales_order_payment_capture>
		</events>
	</global>
	<admin>
		<routers>
			<superdeals>
				<use>admin</use>
				<args>
					<module>Apptha_Superdeals</module>
					<frontName>superdeals</frontName>
				</args>
			</superdeals>
		</routers>
	</admin>

	<adminhtml>
		<layout>
			<updates>
				<superdeals>
					<file>superdeals.xml</file>
				</superdeals>
			</updates>
		</layout>
		<translate>
			<modules>
				<translations>
					<files>
						<default>Apptha_Superdeals.csv</default>
					</files>
				</translations>
			</modules>
		</translate>
	</adminhtml>

	<crontab>
		<jobs>
			<!-- <superdeals_observer>
				<schedule>
					<cron_expr>* * * * *</cron_expr>
				</schedule>
				<run>
					<model>superdeals/observer::SendStatisticsMail</model>
				</run>
			</superdeals_observer> -->
			<superdeals_observer2>
				<schedule>
					<cron_expr>* * * * *</cron_expr>
				</schedule>
				<run>
					<model>superdeals/observer::SendNotificationMail</model>
				</run>
			</superdeals_observer2>
		</jobs>
	</crontab>
</config> 